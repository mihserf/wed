

<% form_for [:admin,@album], :html => { :multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>
    <%=ident_choice(@album)%>
  </p>
  <p>
    <%= f.label 'Название' %><br />
    <%= f.text_field :name, :class => "required" %>
  </p>

  <p>
    <%= f.label 'Описание' %><br />
    <%= f.text_area :description, :size => "40x5" %>
  </p>

  <p>
    <%= f.select :section_id, Section.find(:all).map{|i| [i.name, i.id]}%>
  </p>

  <div id="photos">
    <%= render :partial => 'existing_photo', :collection => @album.photos  unless @album.new_record?  %>
  </div>
  <%= add_link 'Добавить фото', 'photos' %>

  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>

