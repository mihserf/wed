
<%= error_messages_for :section %>
<%form_for [:admin,@section], :html => { :multipart => true } do |f|%>

<p>
<%= f.label 'Название' %><br />
<%=f.text_field :name%>
</p>

<p>
    <%=ident_choice(@section)%>
</p>

<p>
<%= f.label 'Дата создания' %><br />
<%= f.date_select(:created_at) %>
</p>

<p>
<%= f.label 'Текст раздела' %><br />
<%= f.text_area :description, :size => "40x10" %>
</p>


<p>
<%=f.submit 'Сохранить изменения' %>
</p>
<%end%>